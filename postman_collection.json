				{
					"name": "Register User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"testuser\",\n    \"email\": \"test@example.com\",\n    \"password\": \"testpass123\",\n    \"password_confirm\": \"testpass123\",\n    \"first_name\": \"Test\",\n    \"last_name\": \"User\",\n    \"birth_date\": \"2000-01-01\",\n    \"can_be_contacted\": true,\n    \"can_data_be_shared\": false\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/",
